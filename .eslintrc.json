{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": "error",
    "no-undef": "error",
    "semi": ["error", "always"]
  }
} 