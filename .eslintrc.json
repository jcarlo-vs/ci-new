{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true,
      "allow": ["dotenv"]
    }],
    "no-unused-expressions": "off",
    "chai-friendly/no-unused-expressions": "error",
    "import/no-commonjs": "off",
    "global-require": "off"
  }
} 